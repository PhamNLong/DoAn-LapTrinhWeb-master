

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout_Sign.cshtml";
}


<div class="card login-card">
    <div class="row no-gutters">
        <div class="col-md-5">
            <img src="~/Images/Log/1140.jpg" alt="login" class="login-card-img">
        </div>
        <div class="col-md-7">
            <div class="card-body" style="text-align: center;">


                <p class="login-card-description" style="font-size: 25px; color: #000; font-weight: normal; margin-bottom: 23px;">
                    Đăng nhập đi bạn, chần chờ gì :))))
                </p>

                <div style="max-width: 326px; margin:auto;">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            @Html.TextBox("TenDN", null, new { @class = "form-control", @type = "email", @placeholder = "Email" })
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="sr-only">Password</label>
                            @Html.Password("Matkhau", null, new { @class = "form-control", @type = "password", @placeholder = "***********" })
                        </div>
                        <input class="btn btn-block login-btn mb-4" type="Submit" value="Đăng nhập">
                    }
                </div>

                <a href="/quen-mat-khau" class="forgot-password-link">Quên mật khẩu</a>
                <p class="login-card-footer-text">Bạn chưa có tài khoản? <a href="/dang-ky" class="text-reset" style="color: red;">Đăng ký ngay</a></p>
                <nav class="login-card-footer-nav">
                    <a href="#!">Terms of use.</a>
                    <a href="#!">Privacy policy</a>
                </nav>
            </div>
        </div>
    </div>
</div>


